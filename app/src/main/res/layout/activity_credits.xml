<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/spell"
        tools:context=".Credits">

    <ImageButton
            android:layout_width="72dp"
            android:layout_height="45dp"
            android:background="?attr/actionModeCloseDrawable"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="15dp"
            android:id="@+id/backbutton" android:layout_marginRight="8dp" android:layout_marginTop="5dp"/>
    <ImageView
            android:layout_width="210dp"
            android:layout_height="147dp" app:srcCompat="@drawable/avatar"
            android:layout_below="@id/backbutton"
            android:id="@+id/imageView2" android:layout_marginTop="-15dp"/>
    <TextView
            android:text="@string/CreditsText"
            android:layout_width="358dp"
            android:layout_height="513dp"
            android:textSize="14dp"
            android:id="@+id/textView4"
            android:layout_below="@id/imageView2" android:layout_marginTop="7dp"
            android:layout_alignParentLeft="true" android:layout_marginLeft="32dp"/>
</RelativeLayout>